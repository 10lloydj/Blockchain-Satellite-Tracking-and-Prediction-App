# N2YO API Key - Get yours at https://www.n2yo.com/api/
N2YO_API_KEY=your_n2yo_api_key_here

# Blockchain Configuration
# Default Ganache local blockchain address
BLOCKCHAIN_ADDRESS=http://127.0.0.1:7545

# Contract address after deployment - Update this after running truffle migrate
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Path to the contract ABI - Usually don't need to change this
CONTRACT_ARTIFACT_PATH=Code/flaskr/artifacts/Satellites.json

# Default Location (Manchester, UK) - Change these to your preferred default location
DEFAULT_LATITUDE=53.48095
DEFAULT_LONGITUDE=-2.23743

# Flask Configuration
FLASK_APP=flaskr
FLASK_ENV=development
FLASK_DEBUG=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=satellite.log